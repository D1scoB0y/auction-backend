[Unit]
Description=FastAPI auction backend

[Service]
ExecStart=/home/backend-admin/auction-backend/run_commands/gunicorn.sh
Restart=on-failure
User=backend-admin
Group=backend-admin
StandardOutput=file:/home/backend-admin/auction-backend/logs/gunicorn-output.log
StandardError=file:/home/backend-admin/auction-backend/logs/gunicorn-error.log

[Install]
WantedBy=multi-user.target
