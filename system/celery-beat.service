[Unit]
Description=Celery beat
After=celery-worker.service

[Service]
ExecStart=/home/backend-admin/auction-backend/run_commands/celery-beat.sh
Restart=on-failure
User=backend-admin
Group=backend-admin
StandardOutput=file:/home/backend-admin/auction-backend/logs/celery-beat-output.log
StandardError=file:/home/backend-admin/auction-backend/logs/celery-beat-error.log

[Install]
WantedBy=multi-user.target
